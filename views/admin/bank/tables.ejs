<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Nama pemilik</th>
      <th>Nama BANK</th>
      <th>Nomor rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for( let i = 0; i < bank.length; i++ ) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= bank[i].name %></td>
      <td><%= bank[i].bankName %></td>
      <td><%= bank[i].noRekening %></td>
      <td>
        <form
          action="/bank/delete/<%= bank[i].id %>?_method=DELETE"
          method="POST"
        >
          <a
            href="/bank/edit/<%= bank[i]._id %> "
            class="btn btn-info btn-sm"
            ><i class="fas fa-pencil-alt"></i> Edit</a
          >

          <button type="submit" class="btn btn-danger btn-sm">
            <i class="fas fa-trash"> Delete</i>
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>

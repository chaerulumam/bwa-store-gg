<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Tipe Pembayaran</th>
      <th>Nama BANK</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for( let i = 0; i < payment.length; i++ ) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= payment[i].type %></td>
      <td>
        <% payment[i].banks.forEach(bank => { %>
        <span class="badge badge-info">
          <%= bank.name %> <%= bank.bankName %> <%= bank.noRekening %>
        </span>
        <% }) %>
      </td>
      <td>
        <% if (payment[i].status === 'Y') { %>
        <span class="badge badge-success">Aktif</span>
        <% } else { %>
        <span class="badge badge-warning">Non-aktif</span>
        <% } %>
      </td>
      <td>
        <form
          action="/payment/delete/<%= payment[i].id %>?_method=DELETE"
          method="POST"
        >
          <a
            href="/payment/edit/<%= payment[i]._id %> "
            class="btn btn-info btn-sm"
            ><i class="fas fa-pencil-alt"></i> Edit</a
          >

          <button type="submit" class="btn btn-danger btn-sm">
            <i class="fas fa-trash"> Delete</i>
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
